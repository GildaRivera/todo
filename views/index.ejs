    crossorigin="anonymous"></script>
<script>
      let data= '<% data.forEach(i => { %><li> <strong><%= i.task %></strong>  </li>     <% }); %>'
      
</script>

<script src="https://kit.fontawesome.com/ea57e7377a.js" crossorigin="anonymous"></script>
</body>

</html>